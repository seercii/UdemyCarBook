<div class="comment-form-wrap pt-3">
    <h3 class="mb-3">Bir yorum yapın</h3>
    <form method="post" asp-action="AddComment" asp-controller="Blog" class="p-3 bg-light">
        <div class="form-group">
            <input type="hidden" name="BlogID" value="@ViewBag.blogid" />

            <label for="name">Adınız Soyadınız *</label>
            <input type="text" Name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Mail Adresiniz *</label>
            <input type="email" Name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea id="message" Name="Description" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>
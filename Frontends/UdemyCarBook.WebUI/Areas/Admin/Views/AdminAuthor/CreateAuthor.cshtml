@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Yazar Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Yazar alanına veri girişini aşağıdaki panelden yapabilirsiniz.
                        </p>
                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Ad-Soyad</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Yazar Adını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Yazar Görsel</label>
                                <input type="text" class="form-control" id="exampleInputimageUrl" asp-for="ImageUrl" placeholder="Yazar Görsel Girişi Yapınız">
                            </div>


                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->

</div>

